<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="./_assets/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="./_assets/common.css" rel="stylesheet" type="text/css">
    <script src="./_assets/jquery-2.1.4.min.js" type="text/javascript"></script>
    <script src="./_assets/bootstrap.min.js" type="text/javascript"></script>
    <script src="./_assets/sorttable.min.js" type="text/javascript"></script>
    <script src="./_assets/common.js" type="text/javascript"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  </head>

  <body role="document">
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>


        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="./book-list.html">Book List
              <span class="badge">
                <span id="results_num" style="display:none">{{ num_books }}</span>
                <span id="mv_seperator" style="display:none"> / </span>
                <span id="total_num">{{ num_books }}</span>
              </span>
            </a></li>
            <li><a href="./about.html">About</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container-fluid theme-showcase body-container" role="main">

      <!-- Search Filters -->
      <div id="filters" class="jumbotron filter-container col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-12 col-xs-12">

        <div class="filter-section">
          <div class="col-md-3" style="padding-left:0px">
            <h4>Title:</h4>
          </div>
          <div style="display:flex">
            <input class="form-control" id="title-search" type="search" onkeyup="search_book_table(results)" spellcheck="false">
            <span class="glyphicon glyphicon-remove clear-filter" onclick="clear_filter('title-search'); search_book_table(results)"></span>
            <a href="#" class="tooltip-info" data-placement="left" data-toggle="tooltip" title="Searches for any word in title begining with your query [ex. 'Ring' returns 'The Lord of the Rings']" tabindex="-1">
              <i class="glyphicon glyphicon-info-sign question-filter"></i>
            </a>
          </div>
        </div>
        
        <div class="filter-section">
          <div class="col-md-3" style="padding-left:0px">
            <h4>Authors:</h4>
          </div>
          <div style="display:flex">
            <input class="form-control" id="author-search" type="search" onkeyup="search_book_table(results)" spellcheck="false">
            <span class="glyphicon glyphicon-remove clear-filter" onclick="clear_filter('author-search'); search_book_table(results)"></span>
            <a href="#" class="tooltip-info" data-placement="left" data-toggle="tooltip" title="Searches for any author in title begining with your query [ex. 'Dubn' returns 'Levitt & Dubner']" tabindex="-1">
              <i class="glyphicon glyphicon-info-sign question-filter"></i>
            </a>
          </div>
        </div>
        
        <div class="filter-section">
          <div class="col-md-3" style="padding-left:0px">
            <h4>Year:</h4>
          </div>
          <div style="display:flex">
            <input class="form-control" id="year-search" type="search" onkeyup="search_book_table(results)" spellcheck="false">
            <span class="glyphicon glyphicon-remove clear-filter" onclick="clear_filter('year-search'); search_book_table(results)"></span>
            <a href="#" class="tooltip-info" data-placement="left" data-toggle="tooltip" title="Searches for any entry that exactly matches the year" tabindex="-1">
              <i class="glyphicon glyphicon-info-sign question-filter"></i>
            </a>
          </div>
        </div>
        
        <div class="filter-section">
          <div class="col-md-3" style="padding-left:0px">
            <h4>Format:</h4>
          </div>
          <div style="display:flex">
            <input class="form-control" id="format-search" type="search" onkeyup="search_book_table(results)" spellcheck="false">
            <span class="glyphicon glyphicon-remove clear-filter" onclick="clear_filter('format-search'); search_book_table(results)"></span>
            <a href="#" class="tooltip-info" data-placement="left" data-toggle="tooltip" title="Searches for any word in title begining with your query [ex. 'Dia' returns 'Blood Diamond']" tabindex="-1">
              <i class="glyphicon glyphicon-info-sign question-filter"></i>
            </a>
          </div>
        </div>
      </div>


      <div style="width:100%; margin-top:100px">
      <table id="results" class="table table-striped table-bordered sortable scalable_table" data-sortable>
        <thead>
          <tr id="table-header">
            <th class="sorttable_alpha">Title</th>
            <th class="sorttable_alpha">Author(s)</th>
            <th class="sorttable_alpha">Year</th>
            <th>Download As</th>
          </tr>
        </thead>

        <tbody>
          {% for book in books %}
          <tr>
            <td>{{ book[1]['title'] }}</td>
            <td>{{ book[1]['authors'] }}
            <td>{{ book[1]['year'] }}
            <td>
              {% for format in book[1]['formats'] %}
                <span style="margin-left:6px; margin-right:6px">
                  <a href="{{ books_dir }}/{{ book[0] }}.{{ format }}">
                    {{ format }}
                  </a>
                </span>
              {% endfor %}
            </td>
          </tr>
          {% endfor %}
          
          </tbody>
        </table>
      </div>

    </div>
  </body>
</html>
